<!--pages/text/text.wxml-->
<!--1.基本使用-->
<text>hello word\n</text>
<text>你好小程序\n</text>

<!--2.selecttable:true-->
<!--默认情况下text中的文本长按是不能选中-->
<text selectable="{{false}}">Hello codecj\n</text>
<text selectable>Hello codecj\n</text>

<!--3.space:决定文本空格大小-->
<!--ensp:半个中文字符大小-->
<!--emsp:一个中文字符大小-->
<!--nbsp:根据字体设置的空格大小-->
<text>hello word\n</text>
<text space="nbsp">hello word\n</text>
<text space="emsp">hello word\n</text>
<text space="ensp">hello word\n</text>

<!--4.decode属性：是否解码文本-->
<text decode>5&gt;3</text>

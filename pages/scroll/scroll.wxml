<!-- 1.水平滚动：scroll-x -->
<scroll-view class="cont1" scroll-x>
  <view wx:for="{{10}}" class="item1"> {{item}}</view>
</scroll-view>


<!-- 2.垂直滚动：scroll-y -->
<scroll-view class="cont2" scroll-y>
  <view wx:for="{{10}}" class="item2"> {{item}}</view>
</scroll-view>


<!-- 3.其它补充 bindscroll：滚动时触发 -->
<scroll-view class="cont2" scroll-y bindscroll="handleScroll">
  <view wx:for="{{10}}" class="item2"> {{item}}</view>
</scroll-view>